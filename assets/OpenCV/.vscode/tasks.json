/*gcc编译设置*/
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc build active file",
			"command": "/usr/bin/g++", /*使用Gcc命令编译*/
			"args": [
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"`pkg-config",
				"--cflags",
				"--libs",
				"/usr/local/opencv-4.9.0/lib/pkgconfig/opencv4.pc`"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true /*Ctrl+Shift+B快捷键是否启用*/
			},
			"detail": "compiler: /usr/bin/gcc"
		}
	]
}